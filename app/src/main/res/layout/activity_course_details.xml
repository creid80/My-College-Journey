<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UI.CourseDetails">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="-64dp"
        tools:layout_editor_absoluteY="46dp">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_margin="2dp"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:text="Name:"
                android:textSize="20dp"/>
            <EditText
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:id="@+id/courseName"/>
        </androidx.appcompat.widget.LinearLayoutCompat>
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_margin="2dp"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:text="Start Date:"
                android:textSize="20dp"/>
            <EditText
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:inputType="none"
                android:hint="11/12/84"
                android:id="@+id/courseStart"/>
        </androidx.appcompat.widget.LinearLayoutCompat>
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_margin="2dp"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:text="End Date:"
                android:textSize="20dp"/>
            <EditText
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:inputType="none"
                android:hint="11/12/84"
                android:id="@+id/courseEnd"/>
        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_margin="2dp"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:text="CI Name:"
                android:textSize="20dp"/>
            <EditText
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:id="@+id/courseCIName"/>
        </androidx.appcompat.widget.LinearLayoutCompat>
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_margin="2dp"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:text="CI Phone:"
                android:textSize="20dp"/>
            <EditText
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:id="@+id/courseCIPhone"/>
        </androidx.appcompat.widget.LinearLayoutCompat>
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_margin="2dp"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:text="CI Email:"
                android:textSize="20dp"/>
            <EditText
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:id="@+id/courseCIEmail"/>
        </androidx.appcompat.widget.LinearLayoutCompat>
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_margin="2dp"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:text="Note"
                android:textSize="20dp"/>
            <EditText
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:id="@+id/note"/>
        </androidx.appcompat.widget.LinearLayoutCompat>
        <Spinner
            android:id="@+id/courseStatus"
            android:layout_width="match_parent"
            android:layout_height="20dp" />
    </androidx.appcompat.widget.LinearLayoutCompat>
</androidx.constraintlayout.widget.ConstraintLayout>

